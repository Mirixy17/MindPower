#include <iostream>
#include <string>

int main()
{
  std::string name;
  std::cout << "What is your name?";
  getline (std::cin, name);
  std::cout << "Hello, " << name << "!\n";
  
  std::string age;
  std::cout << "What is your age? ";
  getline (std::cin, age);
  std::cout << "How do you feel being " << age << "?\n"; 
  }


