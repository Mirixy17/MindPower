#include <iostream>
#include <string>

int main()
{
	std::string MyLukic = "MeinLiebe";
	MyLukic.resize(MyLukic.size() + 1);

	for (int i = 1; i <= 5; i++)
	{
		int j = MyLukic.size() - i;
		MyLukic[j] = MyLukic[j - 1];
	}
	MyLukic[MyLukic.size() - 6] = 'e';
	std::cout << MyLukic;
}




#include <iostream>
#include <string>

int main()
{

	std::string MyLukic = "MeinLiebe";
{
	
	MyLukic.resize(MyLukic.size() + 1);

	for (int i = 1; i <= 5; i++)
	{
		int j = MyLukic.size() - i;
		MyLukic[j] = MyLukic[j - 1];
	}
	MyLukic[MyLukic.size() - 6] = 'e';
	std::cout << MyLukic<<"\n";

}

	MyLukic.resize(MyLukic.size() + 1);
{
for (int i = 1; i <= 5; i++)
{
	int j = MyLukic.size() - i;
	MyLukic[j] = MyLukic[j - 1];
}
	MyLukic[MyLukic.size() - 6] = ' ';
}

std::cout << MyLukic;
}
