#include <iostream>
#include <string>

int main()
{
	std::string MyLukic1 = "MeinLiebe";
	std::string MyLukic = "          ";

	MyLukic[0] = MyLukic1[0];
	MyLukic[1] = MyLukic1[1];
	MyLukic[2] = MyLukic1[2];
	MyLukic[3] = MyLukic1[3];
	MyLukic[4] = 'e';
	MyLukic[5] = MyLukic1[4];
	MyLukic[6] = MyLukic1[5];
	MyLukic[7] = MyLukic1[6];
	MyLukic[8] = MyLukic1[7];
	MyLukic[9] = MyLukic1[8];
	std::cout << MyLukic;
}




int main()
{
	int a = 3;
	std::string MyLukic = "MeinLiebe";
	MyLukic.resize(MyLukic.size()+1);

	MyLukic[5] = MyLukic[4];
	MyLukic[6] = MyLukic[5];
	MyLukic[7] = MyLukic[6];
	MyLukic[8] = MyLukic[7];
	std::cout << MyLukic;
}
