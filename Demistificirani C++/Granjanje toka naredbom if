#include <iostream>

int main()

{
	std::cout << "Upisi koeficijente pravca:" << std::endl;
	float a, b, c;
	std::cout <<"a = ";
	std::cin >> a;
	std::cout << "b = ";
	std::cin >> b;
	std::cout << "c = ";
	std::cin >> c;
	std::cout << "Koeficijenti: " << a << "," << b << "," << c << std::endl;
	std::cout << "Presjeciste s apcisom:";
	if (a != 0)
		std::cout << -c / a << ", ";
	else
		std::cout << "Nema, ";
	std::cout << "Presjeciste s ordinatom: ";
	if (b != 0)
		std::cout << -c / b << std::endl;
	else
		std::cout << "Nema" << std::endl;

	return 0;
}


#include <iostream>

int main()

{
	float a, b, c;
	std::cout << "Unesi koeficijente kvadratne jednadzbe:" << std::endl;
	std::cout << "a = ";
	cin >> a;
	std::cout << "b = ":
	cin >> b;
	std::cout << "b = ";
	cin >> c;
	std::cout << "c = ";
	if (a)
	{
		float diskr = b * b - 4. * a * c;
		std::cout << "Jednadzba ima ";
		if (diskr == 0)
			std::cout << "dvostruki realni korijen." << std::endl;
		else if (diskr > 0)
			std::cout <<"dva realna korijena" << std::endl;
		else 
			std::cout << "kompleks" << std::endl;

	}
}

