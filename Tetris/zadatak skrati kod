#include <iostream>
#include <Windows.h>
#include <chrono>
#include <thread>
int main()
{
    std::cout << "************" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "************" << std::endl;

    {
        std::chrono::seconds dura(1);
        std::this_thread::sleep_for(dura);
        system("cls");
    }

    std::cout << "************" << std::endl;
    std::cout << "*     *    *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "************" << std::endl;

    {
        std::chrono::seconds dura(1);
        std::this_thread::sleep_for(dura);
        system("cls");
    }

    std::cout << "************" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*     *    *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "************" << std::endl;

    {
        std::chrono::seconds dura(1);
        std::this_thread::sleep_for(dura);
        system("cls");
    };

    std::cout << "************" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*     *    *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "************" << std::endl;

    {
        std::chrono::seconds dura(1);
        std::this_thread::sleep_for(dura);
        system("cls");
    }

    std::cout << "************" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*     *    *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "************" << std::endl;

    {
        std::chrono::seconds dura(1);
        std::this_thread::sleep_for(dura);
        system("cls");
    }

    std::cout << "************" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*          *" << std::endl;
    std::cout << "*     *    *" << std::endl;
    std::cout << "************" << std::endl;
}
